<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.tutorialspoint.struts2.User" table="USER">
    <id name="id" type="int" column="id">
        <generator class="increment"></generator>
    </id>
    <!-- 
        Leaving this set for a template to set up the user_repo
        many-to-many
          
        <set name="teams" cascade="save-update" table="TEAM_USER" inverse="true">
        <key column="user_id"></key>
        <many-to-many column="team_id" entity-name="com.tutorialspoint.struts2.Team"></many-to-many>
    </set>-->
    <property name="name" type="string" column="name" unique="true"></property>
    <property name="isDeactivated" type="boolean" column="isDeactivated"></property>
    <property name="userName" type="string" column="UserName" unique="true"></property>
    <property name="email" type="string" column="email" unique="true"></property>
    <property name="type" type="string" column="type"></property>
    <property name="password" type="string" column="password"></property>
</class>
</hibernate-mapping>
