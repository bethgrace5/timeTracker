<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.excludePattern" value="/dbconsole/*"></constant>

    <package name="default" namespace="/" extends="struts-default">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <default-action-ref name="login" />

        <action name="login">
            <result type="tiles">login</result>
        </action>

        <action name="register" class="com.tutorialspoint.struts2.RegisterAction" method="execute">
            <result name="success">success.jsp</result>
            <result name="error">error.jsp</result>
            <result name="accountDeactivated">deactivatedAccount.jsp</result>
        </action>

        <action name="deactivate" class="com.tutorialspoint.struts2.DeactivateAction" method="execute">
            <result name="success">deactivateSuccess.jsp</result>
        </action>

        <action name="createTeam" class="com.tutorialspoint.struts2.CreateTeamAction" method="execute">
            <result name="success">deactivateSuccess.jsp</result>
        </action>

        <action name="ListTeamsAction" class="com.tutorialspoint.struts2.ListTeamsAction" method="execute">
            <result name="success">iterator.jsp</result>
        </action>

    </package>
</struts>
