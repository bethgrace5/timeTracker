<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.excludePattern" value="/dbconsole/*, /static/css/.*?"></constant>

    <package name="default" namespace="/" extends="struts-default">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <default-action-ref name="show-login" />

        <action name="show-login">
            <result type="tiles">login</result>
        </action>

        <action name="show-register">
            <result type="tiles">register</result>
        </action>

        <action name="login" class="com.tutorialspoint.struts2.LoginAction" method="execute">
            <result name="success" type="tiles">dashboard</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="register" class="com.tutorialspoint.struts2.RegisterAction" method="execute">
            <result name="success" type="tiles">dashboard</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="deactivate" class="com.tutorialspoint.struts2.DeactivateAction" method="execute">
            <result name="success">deactivateSuccess.jsp</result>
        </action>

        <action name="createTeam" class="com.tutorialspoint.struts2.CreateTeamAction" method="execute">
            <result name="success">joinTeamSuccess.jsp</result>
        </action>

        <action name="index">
            <result>index.jsp</result>
        </action>

        <action name="listTeams" class="com.tutorialspoint.struts2.ListTeamsAction" method="execute">
            <result name="success">iterator.jsp</result>
        </action>

        <action name="joinTeam" class="com.tutorialspoint.struts2.JoinTeamAction" method="execute">
            <result name="success">joinTeamSuccess.jsp</result>
        </action>


    </package>
</struts>
