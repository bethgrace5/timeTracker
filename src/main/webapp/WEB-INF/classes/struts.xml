<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.excludePattern" value="/dbconsole/*, /static/css/.*?"></constant>

    <package name="default" namespace="/" extends="struts-default">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <interceptors>
            <interceptor name="show-login" class="com.bethgrace5.timetracker.interceptor.LoggingInterceptor">
                <param name="excludeMethods">login, show-login</param>
            </interceptor>

            <interceptor-stack name="defaultLoginStack">
                <interceptor-ref name="show-login"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>

        </interceptors> 

        <default-interceptor-ref name="defaultLoginStack"></default-interceptor-ref>
        <default-action-ref name="show-login" />

        <global-results>
            <result name="show-login" type="tiles">login</result>
        </global-results>

        <action name="show-login">
            <result type="tiles">login</result>
        </action>

        <action name="show-registerClient" class="com.bethgrace5.timetracker.ClientAction" method="listClients">
            <result type="tiles">registerClient</result>
        </action>

        <action name="show-updateClient" class="com.bethgrace5.timetracker.ClientAction" method="listClients">
            <result type="tiles">updateClient</result>
        </action>

        <action name="login" class="com.bethgrace5.timetracker.LoginAction" method="execute">
            <result name="contractor" type="tiles">dashboard-contractor</result>
            <result name="client" type="tiles">dashboard-client</result>
            <result name="error" type="tiles">login</result>
        </action>

        <action name="logout" class="com.bethgrace5.timetracker.LoginAction" method="logout">
            <result name="success" type="tiles">login</result>
        </action>

        <action name="registerClient" class="com.bethgrace5.timetracker.ClientAction" method="execute">
            <result name="success" type="tiles">dashboard-contractor</result>
            <result name="error" type="tiles">registerClient</result>
            <result name="input" type="tiles">dashboard-contractor</result>
        </action>

        <action name="getSelectedClient" class="com.bethgrace5.timetracker.ClientAction" method="getClient">
            <result name="input" type="tiles">updateClient</result>
            <result name="success" type="tiles">updateClient</result>
            <result name="error" type="tiles">updateClient</result>
            <!-- show which client is selected -->
            <!-- <result name="success"></result> -->
        </action>

        <action name="updateClient" class="com.bethgrace5.timetracker.ClientAction" method="execute">
            <result name="success" type="tiles">dashboard</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="deactivate" class="com.bethgrace5.timetracker.User" method="deactivateUser">
            <result name="success">deactivateSuccess.jsp</result>
        </action>

        <action name="index">
            <result>index.jsp</result>
        </action>

    </package>
</struts>
